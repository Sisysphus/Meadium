extends layout.pug
append head
    link(rel='stylesheet' href='/stylesheets/authentication.css')
    <link href="https://fonts.googleapis.com/css2?family=Martel+Sans:wght@200;300;400&display=swap" rel="stylesheet">
block content
    form.form.container.signup(action="/signup", method="post")
        input(type='hidden' name='_csrf' value=csrfToken)
        if errors
            div(class='alert alert-danger' role='alert')
                p The following error(s) occurred:
                ul
                    each error in errors
                        li= error
        .Header.auth
            h2.Header.auth.main Sign up with email
            .subheader.signup
                h4.Header.auth.subheader Enter the info below to create an account.
                .form-group
                    h4.Header.auth.subheader.small Username
                    input.auth.input.background(type="text", name="username" id="username" placeholder='' value=username required)
                .form-group
                    h4.Header.auth.subheader.small(for="firstName") First Name
                    input.auth.input.background(type="text", name="firstName" id="firstName" placeholder='' value=firstName required)
                .form-group
                    h4.Header.auth.subheader.small(for="lastName") Last Name
                    input.auth.input.background(type="text" name="lastName" id="lastName" placeholder='' value=lastName required)
                .form-group
                    h4.Header.auth.subheader.small(for="email") Email
                    input.auth.input.background(type="email" name="email" id="lastName" placeholder="" value=email required)
                .form-group
                    h4.Header.auth.subheader.small(for="password") Password
                    input.auth.input.background(type="password" name="password" id="password" placeholder="" required)
                    h4.Header.auth.subheader.small(for="passwordConfirm") Confirm Password
                    input.auth.input.background(type="password" name="passwordConfirm" id="passwordConfirm" placeholder="" required)
                .submit.Header.auth
                    button.submit.auth.continue(type="submit") Continue
