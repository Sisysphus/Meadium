extends layout.pug

block content
    form(action="/signup", method="post")
        .header
            h2 Sign up with email
            .subheader
                h4 Enter the info below to create an account.
                .form-group
                    h4(for="username") Your first name
                    input(type="text", name="username" id="username" placeholder='great_user_name' required)
                .form-group
                    h4(for="firstName") Your first name
                    input(type="text", name="firstName" id="firstName" placeholder='Jane' required)
                .form-group
                    h4(for="lastName") Your last name
                    input(type="text" name="lastName" id="lastName" placeholder='Doe' required)
                .form-group
                    h4(for="email") Your email
                    input(type="email" name="email" id="lastName" placeholder="youremail@email.com" required)
                .form-group
                    h4(for="birthday") Your birthday (must be 21 to signup)
                    input(type="date" name="birthday")
                .form-group
                    h4(for="password") Your password
                    input(type="password" name="password" id="password" placeholder="password" required)
                    h4(for="passwordConfirm") Confirm your password
                    input(type="password" name="passwordConfirm" id="passwordConfirm" placeholder="passwordConfirm" required)
                .submit
                    button(type="submit") Create User
