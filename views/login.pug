extends layout.pug

include utils.pug

block content
  +validationErrorSum(errors)
  form(action="/login", method="post")
    input(type='hidden' name='_csrf' value=csrfToken)
    .header
      h2 Enter the info below to log in.
        .form-group
          h4(for="username") Username or Email
          input(type="text", name="usernameOrEmail" id="usernameOrEmail" placeholder='Username or Email' required)
        .form-group
          h4(for="password") Password
          input(type="password" name="password" id="password" placeholder="Password" required)
        .submit
          button(type="submit") Log In
