extends layout.pug
append head
  link(rel='stylesheet' href='/stylesheets/profile.css')
block content
  div.navDiv
    nav.navBar
      .logo.links.container
        a.nav-content1(href="/")
        span.meadium Meadium
        span.pipe |
        span.goodness Goodness
      div#usernameAndAbout
        div#username
          h2= user.username
        div#aboutDiv
          a#about(href=`/profile/about/${user.id}`) About
      div#rightNav
        div#searchBar
          img(src='/Assets/icons/search.png' alt='search button' id='search-btn')
          input(type='text' name='searchedStory' placeholder=`Search my stories` id='search')
        div#formBtns
          div.newStoryDiv
            form(action='/profile/stories/' method='GET').newStoryForm
              button(type='submit' id='newStory') New Story
          div.logoutDiv
            form(action='/profile/logout' method='post').logoutForm
              button(type='submit')#logout Logout
  main
    span#pinnedPanel
      h3.pinned-title Pinned Stories
      div.pinnedContainer
        if pinned
          ul.pins
            each pin in pinned
              li.pinned
                a(href=`/stories/${pin.pinnedStoryId}`) #{pin.Story.title}
    span#stories
      div.storyContainer
        if stories.length
          h1 Created Stories:
          ul.stories
            each story in stories
              li.story
                a(href=`/stories/${story.id}`).storyref
                .storyItems
                  img(src=`${story.imgPath}`)
                  h1.title= story.title
                  p.body= story.body
        else
          p.elseStatment Have something to share?
            a(href='/stories')  Write your first story.
  include footer.pug
  script(src='/javascripts/profile.js')
